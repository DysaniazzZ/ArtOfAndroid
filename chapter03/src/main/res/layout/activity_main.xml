<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.dysania.artofandroid.chapter03.view.SlideView
    android:id="@+id/slide_view"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"
    android:background="@color/colorAccent"/>

  <com.dysania.artofandroid.chapter03.view.ScrollerView
    android:id="@+id/scroller_view"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/slide_view"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:text="Scroller"
    android:textColor="@color/colorWhite"/>

  <TextView
    android:id="@+id/anim_view"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/scroller_view"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:text="Anim"
    android:textColor="@color/colorWhite"/>

  <TextView
    android:id="@+id/handler_view"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/anim_view"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:text="Handler"
    android:textColor="@color/colorWhite"/>

  <Button
    android:id="@+id/btn_demo1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/handler_view"
    android:layout_centerHorizontal="true"
    android:text="Demo 1"
    android:textAllCaps="false"/>

  <Button
    android:id="@+id/btn_demo2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/btn_demo1"
    android:layout_centerHorizontal="true"
    android:text="Demo 2"
    android:textAllCaps="false"/>

</RelativeLayout>
