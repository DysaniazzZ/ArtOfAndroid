<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:textSize="20sp"
    android:text="First Activity"/>

  <Button
    android:id="@+id/btn_first"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open Second Activity"
    android:textAllCaps="false"/>

  <Button
    android:id="@+id/btn_messenger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open Messenger Activity"
    android:textAllCaps="false"/>

  <Button
    android:id="@+id/btn_aidl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open AIDL Activity"
    android:textAllCaps="false"/>

  <Button
    android:id="@+id/btn_provider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open ContentProvider Activity"
    android:textAllCaps="false"/>

  <Button
    android:id="@+id/btn_socket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open Socket Activity"
    android:textAllCaps="false"/>

</LinearLayout>
